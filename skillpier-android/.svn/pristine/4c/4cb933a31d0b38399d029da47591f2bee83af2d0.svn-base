<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/per"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unfocused"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fb_shenhui" />

    <LinearLayout
        android:id="@+id/showview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/filterbg"
                android:gravity="center"
                android:text="Distance" />

            <EditText
                android:id="@+id/distance_min"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/button_filter_edit"
                android:gravity="center"
                android:hint="0"
                android:textColorHint="@color/qianhuise"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/to" />

            <EditText
                android:id="@+id/distance_max"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="number"
                android:textColorHint="@color/qianhuise"
                android:layout_weight="1"
                android:background="@drawable/button_filter_edit"
                android:gravity="center"
                android:hint="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/distanceOk"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:text="ok"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/filterbg"
                android:gravity="center"
                android:text="Price" />

            <EditText
                android:id="@+id/price_min"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:textColorHint="@color/qianhuise"
                android:background="@drawable/button_filter_edit"
                android:gravity="center"
                android:hint="0"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/to" />

            <EditText
                android:id="@+id/price_max"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:background="@drawable/button_filter_edit"
                android:textColorHint="@color/qianhuise"
                android:gravity="center"
                android:hint="0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/priceOk"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:text="ok"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>