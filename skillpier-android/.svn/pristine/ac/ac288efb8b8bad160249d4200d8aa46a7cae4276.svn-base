        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/qianhuise" />


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/danhuise" />


</LinearLayout>