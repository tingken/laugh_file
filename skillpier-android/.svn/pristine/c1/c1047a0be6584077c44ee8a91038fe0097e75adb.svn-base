<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/yang_ly"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/danchengse"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space_30"
                android:paddingTop="@dimen/space_15"
                android:paddingBottom="@dimen/space_15"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.joooonho.SelectableRoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/head_iv"
                        android:src="@drawable/example_7"
                        android:scaleType="centerCrop"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:sriv_left_top_corner_radius="5dip"
                        app:sriv_right_top_corner_radius="5dip"
                        app:sriv_left_bottom_corner_radius="5dip"
                        app:sriv_right_bottom_corner_radius="5dip"
                        app:sriv_border_width="1dip"
                        app:sriv_border_color="@color/picborder"
                        app:sriv_oval="false" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:textSize="@dimen/fontsize_13sp"
                        android:textColor="@color/chengse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/msg_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="暂无留言" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/forward_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price:" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:id="@+id/addpartner_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Additional partner(x2):" />

                <TextView
                    android:id="@+id/partner_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Traffic costs:" />

                <TextView
                    android:id="@+id/cost_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="Amount:" />

                <TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Discount:" />

                <TextView
                    android:id="@+id/discount_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />


            <LinearLayout
                android:id="@+id/fee_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="First joint fee:" />

                <TextView
                    android:id="@+id/fee_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:id="@+id/coupon_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coupon:" />

                <TextView
                    android:id="@+id/coupon_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:" />

                <TextView
                    android:id="@+id/total_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10">

                <Button
                    android:id="@+id/teaching_bt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_35"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_5"
                    android:layout_weight="3"
                    android:background="@drawable/button2_style"
                    android:gravity="center"
                    android:padding="@dimen/space_3"
                    android:textSize="@dimen/fontsize_14sp"
                    android:text="TEACHING LOCATION"
                    android:textColor="@color/chengse" />

                <Button
                    android:id="@+id/get_bt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_35"
                    android:textSize="@dimen/fontsize_14sp"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="2"
                    android:background="@drawable/button_luse_style"
                    android:gravity="center"
                    android:padding="@dimen/space_5"
                    android:text="GET IN TOUCH"
                    android:textColor="@color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />


            <com.quark.skillopedia.ui.widget.ListViewForScrollView
                android:id="@+id/scrolistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.quark.skillopedia.ui.widget.ListViewForScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/danhuise" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_35"
                android:layout_marginRight="@dimen/space_35"
                android:layout_marginTop="@dimen/space_20"
                android:gravity="center">

                <TextView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_5"
                    android:background="@color/luse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:gravity="center"
                    android:text="finished"
                    android:textColor="@color/luse"
                    android:textSize="@dimen/fontsize_10sp" />

                <TextView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_5"
                    android:background="@color/chengse" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:gravity="center"
                    android:text="confirmed"
                    android:textColor="@color/chengse"
                    android:textSize="@dimen/fontsize_10sp" />

                <TextView
                    android:layout_width="@dimen/space_15"
                    android:layout_height="@dimen/space_5"
                    android:background="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginRight="@dimen/space_5"
                    android:gravity="center"
                    android:text="unconfirmed"
                    android:textColor="@color/red"
                    android:textSize="@dimen/fontsize_10sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_0.5"
                android:background="@color/qianhuise"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:padding="@dimen/space_10">

                <Button
                    android:id="@+id/cancel_bt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_35"
                    android:layout_weight="1"
                    android:background="@drawable/button1_style"
                    android:text="CANCEL"
                    android:textColor="@color/qianhuise" />

                <Button
                    android:id="@+id/confirm_bt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_35"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_weight="1"
                    android:background="@drawable/button2_style"
                    android:text="CONFIRM"
                    android:textColor="@color/chengse" />

                <Button
                    android:id="@+id/finish_bt"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_35"
                    android:layout_weight="1"
                    android:background="@drawable/button_luse_style"
                    android:text="@string/finish"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction ID:"
                    android:textSize="@dimen/fontsize_12sp" />

                <TextView
                    android:id="@+id/id_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26256359626"
                    android:textSize="@dimen/fontsize_12sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment time:"
                    android:textSize="@dimen/fontsize_12sp" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="June 18,2007 14:00:00"
                    android:textSize="@dimen/fontsize_12sp" />

            </LinearLayout>

            <include
                layout="@layout/favorites_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_25"></LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>