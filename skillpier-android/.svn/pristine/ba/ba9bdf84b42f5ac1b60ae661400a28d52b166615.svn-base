<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/main_left"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_tab_bg"
            android:paddingRight="10dip">

            <ImageView
                android:id="@+id/left_img"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:src="@drawable/back" />
        </LinearLayout>

        <EditText
            android:id="@+id/editview"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:editable="false"
            android:background="@drawable/edit_while_stylesearch"
            android:drawableLeft="@drawable/search_2"
            android:hint="    Search for lesson or coach"
            android:paddingLeft="@dimen/space_20"
            android:textColorHint="@color/qianhuise"
            android:textSize="@dimen/text_size_13"
           />

        <TextView
            android:id="@+id/recommenttitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Recommand"
            android:visibility="gone"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/qianhuise" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/select1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Category" />

            <ImageView
                android:id="@+id/type1_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/type1"
                android:src="@drawable/carset_2" />

            <ImageView
                android:id="@+id/type1_boom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/up_carset"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="@dimen/space_15"
            android:background="@color/qianhuise" />

        <RelativeLayout
            android:id="@+id/select2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Filter" />

            <ImageView
                android:id="@+id/type2_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/type2"
                android:src="@drawable/carset_2" />

            <ImageView
                android:id="@+id/type2_boom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/up_carset"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/space_1"
            android:layout_height="@dimen/space_15"
            android:background="@color/qianhuise" />

        <RelativeLayout
            android:id="@+id/select3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Sort by" />

            <ImageView
                android:id="@+id/type3_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/type3"
                android:src="@drawable/carset_2" />

            <ImageView
                android:id="@+id/type3_boom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/up_carset"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/qianhuise" />

    <LinearLayout
        android:id="@+id/nowifi_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/unconnect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="网络没有连接" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:text="请检查后重新再连" />

        <Button
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/button1_style"
            android:text="重新加载"
            android:textColor="@color/qianhuise" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.quark.skillopedia.ui.widget.AutoListView
            android:id="@+id/xlstv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"></com.quark.skillopedia.ui.widget.AutoListView>

    </LinearLayout>
</LinearLayout>