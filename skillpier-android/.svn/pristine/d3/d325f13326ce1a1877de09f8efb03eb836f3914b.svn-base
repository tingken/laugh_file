<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ctgview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/ctgpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/example_6" />

        <ImageView
            android:id="@+id/ctgpic_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/radius_"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/ctgpic"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/boomview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text=""
                    android:singleLine="true"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_12sp" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/category"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:singleLine="true"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_12sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/fontsize_12sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/boomview"
                android:gravity="center"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_14sp" />

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/teacher"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_14sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>