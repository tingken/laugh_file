<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/cname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="name"
                    android:background="@null"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/fontsize_14sp"
                    android:textColor="@color/zitihuise" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="@string/Gender" />

                <ImageView
                    android:id="@+id/csex"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="@dimen/space_20"
                    android:src="@drawable/male"
                    android:gravity="right"
                    android:textColor="@color/qianhuise" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="@string/Date_of_Birth" />

                <TextView
                    android:id="@+id/cborthday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textSize="@dimen/fontsize_14sp"
                    android:drawableRight="@drawable/address_right"
                    android:hint="date of birth"
                    android:textColor="@color/zitihuise" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="@string/Phone_Number" />

                <EditText
                    android:id="@+id/cphone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="@dimen/fontsize_14sp"
                    android:text=""
                    android:hint="phone"
                    android:inputType="number"
                    android:maxLength="10"
                    android:background="@null"
                    android:textColor="@color/zitihuise" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="Category:" />

                <TextView
                    android:id="@+id/category_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textSize="@dimen/fontsize_14sp"
                    android:drawableRight="@drawable/address_right"
                    android:hint="select category"
                    android:textColor="@color/zitihuise" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:text="Experience:" />

                <TextView
                    android:id="@+id/experience_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:drawablePadding="5dp"
                    android:text=""
                    android:textSize="@dimen/fontsize_14sp"
                    android:drawableRight="@drawable/address_right"
                    android:hint="select experience year"
                    android:textColor="@color/zitihuise" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/qianhuise" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginRight="@dimen/space_15"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_15"
                    android:text="@string/Government_ID" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_1"
                        android:layout_weight="1"
                        android:background="@drawable/example_11" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_1"
                        android:layout_weight="1"
                        android:background="@drawable/example_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pic1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/example_13" />

                    <ImageView
                        android:id="@+id/pic2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:background="@drawable/example_13" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_15"
                    android:text="Take photo or select one upload your official ID,such as Driver license, passport.This information will not share with others. You should take picture like the example above."
                    android:textSize="@dimen/fontsize_13sp"
                    android:textColor="@color/qianhuise" />

                <Button
                    android:id="@+id/authen_bt"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="@dimen/space_30"
                    android:layout_marginLeft="@dimen/space_60"
                    android:layout_marginRight="@dimen/space_60"
                    android:background="@drawable/button2_style"
                    android:text="AUTHEN"
                    android:textColor="@color/chengse" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>