<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/chengse" />

            <com.quark.skillopedia.ui.widget.MyGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/chengse"
                android:horizontalSpacing="1dp"
                android:numColumns="4"
                android:verticalSpacing="1dp"></com.quark.skillopedia.ui.widget.MyGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/chengse" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:paddingBottom="40dp">

                <TextView
                    android:id="@+id/reject"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bord_red"
                    android:gravity="center"
                    android:text="REJECT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_14sp" />

                <TextView
                    android:id="@+id/confirm"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_luse_min"
                    android:gravity="center"
                    android:text="CONFIRM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_14sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>