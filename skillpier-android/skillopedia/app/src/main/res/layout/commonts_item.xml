<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/tab_8" />

            <LinearLayout
                android:layout_marginLeft="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/fontsize_13sp" />

               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="@style/roomRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5" />

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_6"
                            android:text=""
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_weight="1"

                        android:paddingRight="@dimen/space_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专业技能"
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />

                        <TextView
                            android:id="@+id/skill_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_2"
                            android:text=""
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教学环境"
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />

                        <TextView
                            android:id="@+id/condition_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_2"
                            android:text=""
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="教学态度"
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />

                        <TextView
                            android:id="@+id/attitude_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/qianhuise"
                            android:textSize="@dimen/fontsize_10sp" />
                    </LinearLayout>
                </LinearLayout>
<!--
            </LinearLayout>-->
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/space_5"
            android:id="@+id/comment_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_5"
            android:text=""
            android:textSize="@dimen/fontsize_10sp" />

        <TextView
            android:id="@+id/user_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/danchengse" />

    </LinearLayout>

</LinearLayout>