<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/typeview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/type_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <ImageView
                android:id="@+id/type1_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/example_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/carset_1" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/type_1_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/type1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPORTS"
                        android:textSize="@dimen/fontsize_18sp" />

                    <TextView
                        android:background="@color/qianhuise"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/type1_des"
                    android:textColor="@color/qianhuise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="2"
                    android:textSize="@dimen/fontsize_12sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_2_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/type2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPORTS"
                        android:textSize="@dimen/fontsize_18sp" />

                    <TextView
                        android:background="@color/qianhuise"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp" />

                </LinearLayout>



                <TextView
                    android:id="@+id/type2_des"
                    android:textColor="@color/qianhuise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:maxLines="2"
                    android:text=""
                    android:textSize="@dimen/fontsize_12sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/type_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3">

            <ImageView
                android:id="@+id/type2_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/example_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:src="@drawable/carset_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>